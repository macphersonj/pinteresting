.panel.panel-default
  .panel-heading
    %h1 Listing pins
  .panel-body
    %table
      %thead
        %tr
          %th Description
          %th{:colspan => "3"}
      %tbody
        - @pins.each do |pin|
          %tr
            %td= pin.description
        
            %td= link_to 'Show', pin
            %td= link_to 'Edit', edit_pin_path(pin)
            %td= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }
  .panel-footer
    .btn.btn-default
      = link_to 'New Pin', new_pin_path
