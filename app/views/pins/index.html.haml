.panel.panel-default
  .panel-heading
    %h1 Listing pins
  .panel-body
    %table.table
      %thead
        %tr
          %th Pin
          %th Description
          %th User  
          %th{:colspan => "3"}
          
      %tbody
        - @pins.each do |pin|
          %tr
            %td= image_tag pin.image.url(:medium)
            %td= pin.description
            %td= pin.user.email if pin.user
            %td= link_to 'Show', pin
            - if pin.user == current_user
              %td= link_to 'Edit', edit_pin_path(pin)
              %td= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }
  .panel-footer
    .btn.btn-default
      = link_to 'New Pin', new_pin_path
